{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",

  "files": {
    "ignore": ["node_modules/**", "public/**", "build/**"]
  },
  "formatter": {
    "indentStyle": "space"
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  }
}
