{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",

  "formatter": {
    "ignore": ["node_modules/**", "public/**", "build/**"],
    "indentStyle": "space"
  },
  "organizeImports": {
    "ignore": ["node_modules/**", "public/**", "build/**"],
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "ignore": ["node_modules/**", "public/**", "build/**"],
    "rules": {
      "recommended": true
    }
  }
}
